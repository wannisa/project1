<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/roboto_calendar_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/roboto_calendar_padding"
    android:paddingRight="@dimen/roboto_calendar_padding"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คำนวณการตกไข่"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

    <include
        layout="@layout/roboto_calendar_date_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <include
        layout="@layout/roboto_calendar_week_days_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/roboto_calendar_padding"/>

    <LinearLayout
        android:id="@+id/daysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <include
            layout="@layout/roboto_calendar_week_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/roboto_calendar_week_bottom_padding" />

        <include
            layout="@layout/roboto_calendar_week_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

    <Button
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="บันทึก"
        android:background="@color/roboto_calendar_blue"
        android:id="@+id/button3"
        android:layout_gravity="right" />


</LinearLayout>